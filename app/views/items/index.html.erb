<h1>Meine Aufgaben</h1>
<p>hier neue Aufgaben eintragen</p>
<button type="button" class="btn btn-default"><%= link_to "Neue Aufgabe", new_item_path %></button>
<hr></hr>
<% @items.each do |item| %>
  <% if item.completed? %>
    <div class="row item">
      <div  class="col-md-6">
        <h2><s><%= link_to item.title, item %></s></h2>
        <p><%= time_ago_in_words(item.completed_at) %> ago.</p>
      </div>
    </div>
  <% else %>
    <div class="row item">
      <div  class="col-md-6">
        <h2><%= link_to item.title, item %></h2>
        <p><%= item.description %></p>
      </div>
      <div class="col-md-2">
        <h3><button type="button" class="btn btn-default"><%= link_to "Erledigt", complete_item_path(item), method: 'patch' %></button></h3>
      </div>
    </div>
  <% end %>
<% end %>
